<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#101010"
    tools:context="jp.ac.uec.a67thchofufes.a67thchofufesapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainbg"
        android:scaleType="fitXY"
        android:alpha="1"
        app:srcCompat="@drawable/bg2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpMenuList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/maintitle"
            android:layout_weight="3" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/oficialcite"
            android:background="@color/alpha0"

            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:onClick="LoadOfficialSite" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/ListofStore"
            android:background="@color/alpha0"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:onClick="LoadStorelist" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/Map"
            android:background="@color/alpha0"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:onClick="LoadMap" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/TimeTable"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:onClick="LoadTimeTable"
            android:background="@color/alpha0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:onClick="LoadInfo"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@color/alpha0"
                android:id="@+id/newInfo"
                android:padding="@dimen/appbar_padding_top" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/alpha0"
                android:id="@+id/Info"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:onClick="LoadInfo" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
