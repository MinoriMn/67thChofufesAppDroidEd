<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/store_image_length"
            android:layout_height="@dimen/store_image_length"
            app:srcCompat="@drawable/noimage" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/StoreOrga"
                android:layout_weight="5" />

            <ImageView
                android:layout_width="0dp"
                app:srcCompat="@drawable/twitter"
                android:id="@+id/Twitter"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="0dp"
                app:srcCompat="@drawable/cite"
                android:id="@+id/Cite"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:textStyle="bold"
            android:id="@+id/StoreName"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample&#xA;Intro&#xA;So longlonglonglonglonglonglonglonglonglonglong Text"
            android:id="@+id/StoreIntro" />
    </LinearLayout>

</LinearLayout>